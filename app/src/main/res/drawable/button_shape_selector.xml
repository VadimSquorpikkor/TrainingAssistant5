<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:endColor="?attr/customButtonGradientEndPressed"
                android:centerColor="?attr/customButtonGradientCenterPressed"
                android:startColor="?attr/customButtonGradientEndPressed"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:startColor="?attr/customButtonGradientDisabledStart"
                android:endColor="?attr/customButtonGradientDisabledEnd"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/customButton" />
        </shape>
    </item>
</selector>